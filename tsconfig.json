{
	"compilerOptions": {
		"target": "es2017",
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"strict": true,
		"noImplicitAny": true,
		"suppressImplicitAnyIndexErrors": true,
		"strictPropertyInitialization": false,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"outDir": "./dist",
		"moduleResolution": "node",
		"typeRoots": [
			"node_modules/@types"
		],
		"types": [
			"@types/node",
			"jest"
		],
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
	},
	"include": [
		"src"
	],
	"exclude": [
		".github",
		"node_modules",
		"dist",
		"src/specs"
	]
}